<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF8F8"
    tools:context=".Hotels.DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ScrollView
                android:id="@+id/scroll1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >


                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp"
                            tools:ignore="VectorDrawableCompat" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/hotel1img"
                        android:layout_width="match_parent"
                        android:layout_height="288dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/hotel1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/layout_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/titlename"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/semibold"
                                    android:paddingLeft="15dp"
                                    android:text="Float Hotel"
                                    android:textColor="#091020"
                                    android:textSize="24sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.08"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <ImageView
                                    android:id="@+id/location_hotel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="-1dp"
                                    android:paddingRight="10dp"
                                    android:src="@drawable/location_map_icon" />
                            </RelativeLayout>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/nearBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout_title"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif-light"
                            android:paddingLeft="15dp"
                            android:text="near nagoa beach"
                            android:textColor="#091020"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.08"

                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        >

                        <TextView
                            android:id="@+id/discr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="Discription"
                            android:textColor="@android:color/primary_text_light_nodisable"
                            android:textSize="18sp" />

                        <com.borjabravo.readmoretextview.ReadMoreTextView
                            android:id="@+id/show_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/discr"

                            android:lineSpacingExtra="2dp"
                            android:paddingLeft="5dp"
                            android:text="Banh troi are small white balls made of brown sugar, wrapped in glutinous rice flour. The name floating cakes came about from the way it is actually cooked."
                            android:textSize="15sp"
                            app:colorClickableText="@android:color/darker_gray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:trimExpandedText="Show more"
                            app:trimLength="140"
                            app:trimMode="trimModeLength" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:background="#000000"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/amenties"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/semibold"
                            android:text="Amenities"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:paddingBottom="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/amenties"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="164dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/amenities1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/ac"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ac_icon" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:layout_toRightOf="@+id/ac"
                                        android:gravity="center_horizontal"
                                        android:paddingLeft="5dp"
                                        android:text="AC rooms" />


                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/tv"
                                        android:layout_width="35dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/tv_icon" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:layout_toRightOf="@+id/tv"
                                        android:gravity="center_horizontal"
                                        android:paddingLeft="5dp"
                                        android:text="TV " />


                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp">

                                    <ImageView
                                        android:id="@+id/park"
                                        android:layout_width="35dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/parking_icon" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:layout_toRightOf="@+id/park"
                                        android:gravity="center_horizontal"
                                        android:paddingLeft="5dp"
                                        android:text="Parking" />


                                </RelativeLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="164dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/amenities2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/wifi"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:paddingLeft="10dp"
                                        android:src="@drawable/wifi_icon" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:layout_toRightOf="@+id/wifi"
                                        android:gravity="center_horizontal"
                                        android:paddingLeft="5dp"
                                        android:text="Free wi-fi" />


                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/cctv"
                                        android:layout_width="35dp"
                                        android:layout_height="30dp"
                                        android:paddingLeft="10dp"
                                        android:src="@drawable/cctv_icon" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:layout_toRightOf="@+id/cctv"
                                        android:gravity="center_horizontal"
                                        android:paddingLeft="5dp"
                                        android:text="cctv" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000"
                        android:layout_marginTop="2dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rules &amp; policies"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:fontFamily="@font/semibold"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp">

                                <LinearLayout
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingRight="10dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="Check-in after"
                                        android:textColor="#000000"
                                        android:textAlignment="center"
                                        android:textSize="13sp"
                                        android:gravity="center_horizontal" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="12:00 PM" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingLeft="25dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif-medium"
                                        android:paddingLeft="10dp"
                                        android:text="Checkout before"
                                        android:textColor="#000000"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="11:00 AM" />

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Important to note"
                            android:layout_marginTop="8dp"
                            android:textColor="#000000"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="13sp"
                            android:paddingBottom="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rules"
                            android:textSize="12sp"
                            android:paddingLeft="10dp"/>

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <Button
                                android:layout_width="200dp"
                                android:layout_height="80dp"
                                android:fontFamily="@font/belgrano"
                                android:padding="5dp"
                                android:text="Rooms"
                                android:textAllCaps="true"
                                android:textColor="#fff"
                                android:textSize="20sp"
                                android:onClick="room_btn"/>


                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/belgrano"
                                android:gravity="center"
                                android:text="500"
                                android:textSize="20sp" />


                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </ScrollView>



    </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>